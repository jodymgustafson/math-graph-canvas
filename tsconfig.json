{
  "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "esModuleInterop": true,
      "sourceMap": true,
      "declaration": true,
      "moduleResolution": "node",
      "baseUrl": "./node_modules",
      "outDir": "dist",
      "resolveJsonModule": true,
      "strict": true,
      "skipLibCheck": true,
      "allowJs": false
  },
  "exclude": ["./node_modules", "./dist"]
}